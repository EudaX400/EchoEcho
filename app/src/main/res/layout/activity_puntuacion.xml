<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="16dp"
    android:background="@drawable/gradient_background">

    <TextView
        android:id="@+id/textViewTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Puntuació Final!"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewPuntuacionValor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewTitulo"
        android:layout_centerInParent="true"
        android:layout_marginTop="86dp"
        android:textColor="#FFFFFF"
        android:textSize="55sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonVolver"
        android:layout_width="199dp"
        android:layout_height="64dp"
        android:layout_below="@id/textViewPuntuacionValor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="191dp"
        android:background="@drawable/botopropi"
        android:onClick="returnToMenu"
        android:text="Tornar al Menú"
        android:textSize="18sp" />

</RelativeLayout>
